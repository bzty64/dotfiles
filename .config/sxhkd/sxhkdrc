super + Escape
	"$XDG_CONFIG_HOME"/sxhkd/functions

super + Return
	alacritty

super + w
	librewolf

super + d 
	dmenu_run

super + shift + p
	st -e cmus

super + p
	spotify

super + s 
    signal-desktop&

super + r
	st -e /usr/bin/lfrun

super + ctrl + x 
	prompt "Are you sure you want to shutdown?" "sudo poweroff"

super + ctrl + r 
	prompt "Are you sure you want to reboot?" "sudo reboot"

super + Print
    flameshot gui
	;scrot '%Y-%m-%d_%R_$wx$h.png' -e 'mv $f ~/pics/ss/;sxiv ~/pics/ss/$f'

super + shift + F1
	st -e pulsemixer

super + F3
	pamixer default-sink -i 5

super + F2
	pamixer default-sink -d 5

super + F1
	pamixer default-sink -t

super + F8
	wifi

super + F6
    sudo xbacklight -inc 5

super + F5
    sudo xbacklight -dec 5
